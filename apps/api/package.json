{
  "name": "@app/api",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --loader tsx/cjs src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "migrate": "node --loader tsx/cjs src/database/migrate.ts",
    "seed": "node --loader tsx/cjs src/database/seed.ts",
    "seed-alerting": "node --loader tsx/cjs src/database/seed-alerting.ts"
  },
  "dependencies": {
    "express": "^4.18.0",
    "@shared/types": "workspace:*",
    "@shared/utils": "workspace:*",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "supertest": "^6.3.3"
  }
}
