# Local Development Environment
# Copy this file to .env.local and adjust values as needed for local development

NODE_ENV=development

# Database - Local Development
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=barber_booking_db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/barber_booking_db

# Redis - Local Development
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# API - Local Development
API_PORT=3001

# Web - Local Development
WEB_PORT=3000
VITE_API_URL=http://localhost:3001

# Authentication - JWT Tokens (Development)
JWT_ACCESS_SECRET=dev-secret-key-local
JWT_REFRESH_SECRET=dev-refresh-key-local
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
