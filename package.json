{
  "name": "monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "A comprehensive monorepo using pnpm workspaces",
  "name": "inventory-barcode-scanner",
  "version": "1.0.0",
  "description": "Inventory management system with barcode/QR code scanning",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@zxing/library": "^0.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^23.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "@typescript-eslint/parser": "^6.10.0"
  "name": "barber-booking-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Barber booking system - API and customer UI",
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r --filter ./apps --filter ./packages run build",
    "test": "pnpm -r run test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean && rm -rf node_modules pnpm-lock.yaml"
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r --filter ./apps --filter ./packages run build",
    "type-check": "pnpm -r run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
